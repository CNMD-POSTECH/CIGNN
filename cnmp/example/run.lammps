# Defining the units
#-------------------
units         metal

# Defining atom style and boundary conditions 
#--------------------------------------------
dimension     3
boundary      p p p
atom_style    charge

neighbor      1.0 bin
neigh_modify  delay 0 every 1 check yes

# Defining the simulation box
#----------------------------
read_data     /scratch/x3100a06/MLP_Paper/CIGNN/cnmp/example/example.data

mass         1 178.49
mass         2 15.9994

group Hf type 1
group O type 2

## Defining interaction potential
##-------------------------------
pair_style   CNMP/gpu  'cuda' /scratch/x3100a06/MLP_Paper/CIGNN/cnmp/lammps/potentials/CNMP 0.0 0.0 0
pair_coeff    * *  CNMP Hf O

# Defining the output format (ie. customize thermo_style)
##--------------------------------------------------------
thermo_style  custom step time cpu pe ke etotal temp vol
thermo        1

# Sudden increasing temperature
##--------------------------------------------------------
velocity      all create 1100.0 123456 loop geom
fix           1 all nvt temp 1100.0 1100.0 0.001
timestep      0.001
restart       10000 out.restart

# Run the simulation
##--------------------------------------------------------
dump          myDump all custom 1 /scratch/x3100a06/MLP_Paper/CIGNN/cnmp/example/xyz.lammpstrj id element x y z q
dump_modify   myDump sort id element Hf O
run           80000

# Save
##--------------------------------------------------------
write_data   /scratch/x3100a06/MLP_Paper/CIGNN/cnmp/example/out.data
